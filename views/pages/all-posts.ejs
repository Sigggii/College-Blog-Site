<!DOCTYPE html>
<html lang="en">
<%- include('../partials/general/head'); %>
<body class="min-h-screen flex flex-col">
<%- include('../partials/general/header') %>
<section class="flex flex-col p-5 mx-auto w-full bg-white max-w-[500px] md:max-w-[800px] ">
    <section class="flex flex-col w-full text-xl text-black">
        <div class="flex justify-between gap-0 self-start ml-3.5 text-4xl py-1">
            <span class="self-end">All Blog Posts</span>
            <img src="/assets/motorcycle.svg"
                 alt="Decorative image" class="self-end self-end w-[12%] -rotate-[30deg]"/>
        </div>
    </section>
    <section id="filter-container" class="mt-4">
        <%- include('../partials/all-posts/post-filter-component') %>
    </section>
    <section id="posts-container" class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-10 flex-col justify-center">
        <% for(const post of posts){ %>
            <div class="flex flex-col justify-center">
                <img class="w-[40px] self-center" src="/assets/motorcycle.svg">
                <%- include('../partials/general/post-preview-component', {previewPost: post}) %>
            </div>
        <% } %>
    </section>
    <%- include('../partials/all-posts/post-pagination-component', {submitFormId: 'post-filter-form'}) %>
</section>
<%- include('../partials/general/alert-component') %>
<%- include('../partials/general/footer') %>
</body>
</html>
