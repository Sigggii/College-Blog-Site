<%const recentPosts = posts.slice(1)%>
<h2 class="self-center text-3xl leading-10 text-black mt-3 font-medium">Recent Posts</h2>
<section class="grid grid-cols-1 md:grid-cols-2 gap-4 px-5 max-w-[500px] md:max-w-[800px] mt-10">
    <%for(const post of recentPosts){%>
    <div class="flex flex-col justify-center">
        <%- include('../general/post-preview-component', {previewPost: post}) %>
        <img class="w-[40px] self-center" src="/assets/motorcycle.svg">
    </div>
    <%}%>
</section>